#!/bin/sh

# Port of the rails development server to check
PORT="3000"

# Path of repository
REPO_PATH="$HOME/git/Capstone2015"

# Remote to pull from when updating
REMOTE="origin"

# Branch to pull from when updating
BRANCH="live"

# Set the rails environment
export RAILS_ENV="production"

# With the way the current production config is setup, we do
# want to serve static files (for image uploads)
export RAILS_SERVE_STATIC_FILES=1
